<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign up</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="../css/add-product.css">
</head>

<body>
    <%- include("./includes/navbar.ejs") %>
    <div class="container-fluid mt-4 form-container" >
        <form action="/sign-up" class="w-25" method="post" onsubmit="validatePassword(event)">
            <h2 class="fw-bold fs-3 m-4 mb-3">Sign Up</h2>
            <div class="form-control m-3 p-4">
                <div class="col-12 mt-2 mb-3">
                    <label class="form-label fs-4">Username <span class="fs-6 text-secondary fst-italic">(Email)</span></label>
                    <input type="text" name="productname" class="form-control" placeholder="name@example.com">
                </div>
                <div class="row">
                    <label class="form-label fs-4">Password</label>
                    <div class="col-10 mt-2 mb-3">
                        <input type="password" name="password" class="form-control" id="passwordInp">
                    </div>
                    <div class="mt-2 mb-3 col-2 btn">
                        <i class="bi bi-eye-slash" name="passwordHidden" onclick="toggleDisplay(this)"></i>
                    </div>
                </div>
                <div class="row">
                    <label class="form-label fs-4">Confirm Password</label>
                    <div class="col-10 my-3 mt-2 mb-3">
                        <input type="password" name="confirmPassword" class="form-control" id="ConfirmPasswordInp">
                    </div>
                    <div class="mt-2 mb-3 col-2 btn">
                        <i class="bi bi-eye-slash" name="confirmPasswordHidden" onclick="toggleDisplay(this)"></i>
                    </div>
                    <div id="helper-text" class="text-danger"></div>
                </div>
                <button class="btn btn-primary fs-4 my-3 w-100" type="submit">Sign up</button>
            </div>
        </form>
    </div>

    <script>
        const toggleDisplay = (e) => {
            const passwordInp = document.getElementById("passwordInp");
            const confirmPasswordInp = document.getElementById("ConfirmPasswordInp");
            const selectedToggle = e.getAttribute("name");

            if (selectedToggle === 'passwordHidden') {
                passwordInp.type = "text";
                e.className = "bi bi-eye";
                e.setAttribute("name", "passwordVisible");
            } else if (selectedToggle === 'passwordVisible') {
                passwordInp.type = "password";
                e.className = "bi bi-eye-slash";
                e.setAttribute("name", "passwordHidden");
            } else if (selectedToggle === 'confirmPasswordHidden') {
                confirmPasswordInp.type = "text";
                e.className = "bi bi-eye";
                e.setAttribute("name", "confirmPasswordVisible");
            } else if (selectedToggle === 'confirmPasswordVisible') {
                confirmPasswordInp.type = "password";
                e.className = "bi bi-eye-slash";
                e.setAttribute("name", "confirmPasswordHidden");
            }
        }
        

        const validatePassword = (e) => {
    const passwordInp = document.getElementById("passwordInp");
    const confirmPasswordInp = document.getElementById("ConfirmPasswordInp");

    if (passwordInp.value === confirmPasswordInp.value) {
        document.getElementById("helper-text").innerHTML = "";
        return true;  // Allow form submission
    } else {
        document.getElementById("helper-text").innerHTML = "Passwords do not match.";
        e.preventDefault();  // Prevent form submission
        return false;
    }
}

 </script>
</body>

</html>
